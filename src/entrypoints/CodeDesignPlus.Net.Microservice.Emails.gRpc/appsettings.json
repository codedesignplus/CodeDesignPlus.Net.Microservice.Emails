{
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://*:5000",
        "Protocols": "Http1"
      },
      "Http2": {
        "Url": "http://*:5001",
        "Protocols": "Http2"
      }
    }
  },
  "Core": {
    "Id": "c8f6e5cc-bba7-4d25-b2c0-fd2d7a90557a",
    "AppName": "ms-emails-grpc",
    "Version": "v1",
    "Description": "This microservice allows the user or service to send emails based on a template.",
    "Business": "CodeDesignPlus",
    "Contact": {
      "Name": "Wilzon Liscano",
      "Email": "wliscano@codedesignplus.com"
    }
  },
  "Security": {
    "IncludeErrorDetails": true,
    "ValidateAudience": true,
    "ValidateIssuer": true,
    "ValidateLifetime": true,
    "RequireHttpsMetadata": true,
    "ValidIssuer": "",
    "ValidAudiences": [],
    "Applications": []
  },
  "Redis": {
    "Instances": {
      "Core": {
        "ConnectionString": "localhost:6379"
      }
    }
  },
  "RedisCache": {
    "Enable": true,
    "Expiration": "00:05:00"
  },
  "RabbitMQ": {
    "Enable": true,
    "Host": "localhost",
    "Port": 5672,
    "UserName": "admin",
    "Password": "password",
    "EnableDiagnostic": true
  },
  "Mongo": {
    "Enable": true,
    "ConnectionString": "mongodb://localhost:27017",
    "Database": "db-ms-emails",
    "Diagnostic": {
      "Enable": true,
      "EnableCommandText": true
    }
  },
  "Logger": {
    "Enable": true,
    "OTelEndpoint": "http://127.0.0.1:4317"
  },
  "Observability": {
    "Enable": true,
    "ServerOtel": "http://127.0.0.1:4317",
    "Trace": {
      "Enable": true,
      "AspNetCore": true,
      "GrpcClient": true,
      "SqlClient": false,
      "CodeDesignPlusSdk": true,
      "Redis": true,
      "Kafka": false
    },
    "Metrics": {
      "Enable": true,
      "AspNetCore": true
    }
  },
  "Vault": {
    "Enable": true,
    "Address": "http://127.0.0.1:8200",
    "AppName": "ms-emails",
    "Solution": "security-codedesignplus",
    "Token": "root",
    "Mongo": {
      "Enable": true,
      "TemplateConnectionString": "mongodb://{0}:{1}@localhost:27017"
    },
    "RabbitMQ": {
      "Enable": true
    }
  }
}
